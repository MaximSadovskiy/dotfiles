#!/bin/sh
# Description: Script to get current date and time

source sb-status2d

case "$(date '+%I')" in
    "01") icon_clock="ğŸ•" ;;
    "02") icon_clock="ğŸ•‘" ;;
    "03") icon_clock="ğŸ•’" ;;
    "04") icon_clock="ğŸ•“" ;;
    "05") icon_clock="ğŸ•”" ;;
    "06") icon_clock="ğŸ••" ;;
    "07") icon_clock="ğŸ•–" ;;
    "08") icon_clock="ğŸ•—" ;;
    "09") icon_clock="ğŸ•˜" ;;
    "10") icon_clock="ğŸ•™" ;;
    "11") icon_clock="ğŸ•š" ;;
    "12") icon_clock="ğŸ•›" ;;
esac

printf "%s%s %s%s" "$s2d_color5" "$icon_clock" "$(LC_ALL="ru_RU.UTF-8" date '+%A, %H:%M')" "$s2d_reset"
