#!/bin/sh
# Description: Script to get current volume

source sb-status2d

info="$(pamixer --get-volume)"

if [ "$info" -le 1 ]; then
    icon_volume="ðŸ”‡"
elif [ "$info" -le 15 ]; then
    icon_volume="ðŸ”ˆ"
elif [ "$info" -le 55 ]; then
    icon_volume="ðŸ”‰"
else
    icon_volume="ðŸ”Š"
fi

printf "%s%s %s %s" "$s2d_color4" "$icon_volume" "$info%" "$s2d_reset"

